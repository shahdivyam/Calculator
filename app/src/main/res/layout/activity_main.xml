<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.divyamshah15.mycalculator.MainActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="10">
        <EditText
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="30dp"
            android:focusableInTouchMode="false"
            android:id="@+id/et_1"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_op"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent"
            android:textSize="60dp"
            android:textAlignment="center"
            android:focusableInTouchMode="false"
             />
        <EditText
            android:gravity="center"
            android:textSize="30dp"
            android:id="@+id/et_2"
            android:focusableInTouchMode="false"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_below="@id/ll1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:onClick="onClick"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="100dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:id="@+id/tv_clear"
            android:layout_weight="3"
            android:text="C"
            android:textSize="40dp"/>
        <TextView
            android:onClick="onClick"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="100dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:id="@+id/tv_del"
            android:layout_weight="3"
            android:text="D"
            android:textSize="40dp"/>

        <TextView
            android:onClick="onClick"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/tv_answer"
            android:layout_weight="8"
            android:layout_toRightOf="@+id/tv_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:textColor="@color/answerColor"
            />
    </LinearLayout>
    <GridLayout
        android:background="@color/numPadColor"
        android:textColor="@color/numPadDigit"
        android:columnCount="9"
        android:rowCount="4"
        android:layout_below="@id/ll2"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_7"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="7"
            android:textSize="70dp"
            android:layout_width="70dp"
            android:textAlignment="center"

            android:onClick="onClick"
            android:clickable="true"

            />
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_8"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="70dp"
            android:layout_columnSpan="2"
            android:text="8"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"
            />
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_9"
            android:layout_row="0"
            android:layout_column="4"
            android:textSize="70dp"
            android:layout_columnSpan="2"
            android:text="9"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"
            />
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_plus"
            android:textSize="70dp"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_columnSpan="3"
            android:text="+"
            android:layout_width="120dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_4"
            android:textSize="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="4"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_5"
            android:textSize="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:text="5"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_6"
            android:textSize="70dp"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_width="70dp"
            android:layout_columnSpan="2"
            android:text="6"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>


        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_minus"
            android:textSize="70dp"
            android:layout_row="1"
            android:layout_column="6"
            android:layout_columnSpan="3"
            android:text="-"
            android:layout_width="120dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_1"
            android:textSize="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="1"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_2"
            android:textSize="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:text="2"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_3"
            android:textSize="70dp"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:text="3"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_mul"
            android:textSize="70dp"
            android:layout_row="2"
            android:layout_column="6"
            android:layout_columnSpan="3"
            android:text="X"
            android:layout_width="120dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_0"
            android:textSize="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="0"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_equal"
            android:textSize="70dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="4"
            android:text="="
            android:layout_width="160dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView
            android:textColor="@color/numPadDigit"
            android:id="@+id/tv_div"
            android:textSize="70dp"
            android:layout_row="3"
            android:layout_column="6"
            android:layout_columnSpan="3"
            android:text="/"
            android:layout_width="120dp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>


    </GridLayout>

</RelativeLayout>
